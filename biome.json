{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!!node_modules"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "single",
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  },
  "linter": {
    "domains": {
      "project": "recommended"
    },
    "enabled": true,
    "includes": ["**", "!playground/**"],
    "rules": {
      "a11y": "warn",
      "complexity": {
        "useArrowFunction": "off"
      },
      "correctness": {
        "noUnusedImports": {
          "fix": "safe",
          "level": "warn",
          "options": {}
        }
      },
      "recommended": true,
      "suspicious": {
        "noAsyncPromiseExecutor": "warn",
        "noConsole": "off",
        "noEmptyBlock": "warn",
        "noEmptyBlockStatements": "warn",
        "useAwait": "warn"
      }
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
